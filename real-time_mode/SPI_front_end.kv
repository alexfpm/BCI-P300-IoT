<RootWidget>:
    orientation: 'vertical'

    Label:
        text: 'Animated graph from Matplotlib!'
        size_hint_y: 0.2

    GraphView:
    

<GraphView>:
    box1: boxGraph

    BoxLayout:
        orientation: "vertical"
        
        
        # Layout for animated matplotlib graph of data
        BoxLayout:
            id: boxGraph
            size_hint: [1, 0.8]
        
        
        # Layout for buttons: start and stop the plotting
        BoxLayout:
            size_hint: [1, 0.2]
            orientation: "horizontal"
            
            Button:
                text: "START"
                bold: True
                on_press: root.start()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()




